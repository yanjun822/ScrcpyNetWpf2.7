<Window x:Class="ScrcpyNetWpf2._7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScrcpyNetWpf2._7" xmlns:dis="clr-namespace:ScrcpyNetWpf2;assembly=ScrcpyNetWpf2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Button Content="连接" Click="Button_Click"></Button>
            <Button Content="断开" Click="Button_Click_1"></Button>

        </StackPanel>

        <dis:ScrcpyDisplay Scrcpy="{Binding ScrcpyNetCtr.Scrcpy}" Grid.Row="1"></dis:ScrcpyDisplay>
    </Grid>
</Window>
